{
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "es2015",
      "dom"
    ],
    "typeRoots": [
      "./node_modules/@types",
      "./node_modules/phaser-ce/typescript/"
    ],
    "module": "commonjs",
    "noEmitOnError": false,
    "rootDir": "./src",
    "skipLibCheck": true,
    "moduleResolution": "node",
    "noImplicitAny": false,
    "sourceMap": true,
    "suppressImplicitAnyIndexErrors": true,
    "target": "es5"
  },
  "files": [
    "src/server/server.ts"
  ],
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "*.spec.ts",
    "db",
    "pages",
    "routes",
    "middleware",
    "auth"
  ],
  "awesomeTypescriptLoaderOptions": {
    "transpileOnly": true
  }
}